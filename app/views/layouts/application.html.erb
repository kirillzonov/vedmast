<!DOCTYPE html>
<html>
<head>
  <title>Obereg</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header"></div>
  <div id="menu">

    <%= link_to 'Главная', root_path %> 
    <%= link_to 'Информация', information_index_path %>  
    <div id="categories">Товары</div>
    <div id="popup-categories"  style="display: none; height: auto;">
      <% @categories.each do |cat| %>
        <%= link_to cat.name, cat %><br>
      <% end %>
    </div>
    <%= link_to 'Контакты', nil %>
    <%= link_to 'Вопросы', questions_path %>
  </div>
    <script>
      $("#categories").click(function () {
        if ($("#popup-categories").is(":hidden")) {
          $("#popup-categories").slideDown("slow");
      } else {
      $("#popup-categories").hide();
  }
});
    </script>
  <div id="content">
<%= yield %>
</div>
<% if logged_in? -%>
  <div id="user-bar-action"  >(<%= link_to "Стать простым пользователем", logout_path, { :title => "Log out" }    %>)</div>
<% end -%>
</body>
</html>
