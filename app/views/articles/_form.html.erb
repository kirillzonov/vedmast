    <%= f.label "Описание" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Материал" %><br />
    <%= f.text_field :material %>
  </div>
  <div class="field">
    <%= f.label "Путь к картинке" %><br />
    <%= f.text_field :little_pic %>
  </div>
  <div class="field">
    <%= f.label "Категория" %><br />
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, @article.category_id) %>
  </div>
  <div class="field">
    <%= f.label "Цена" %><br />
    <%= f.text_field :price %>
  </div>
