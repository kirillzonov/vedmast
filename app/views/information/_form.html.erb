<%= form_for(@information) do |f| %>
  <% if @information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@information.errors.count, "error") %> prohibited this information from being saved:</h2>

      <ul>
      <% @information.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Картинка с названием" %><br />
    <%= image_tag(@information.name_pic_url) if @information.name_pic? %>
    <%= f.file_field :name_pic %>
    <%= f.hidden_field :name_pic_cache %>
  </div>
  <div class="field">
    <%= f.label :short %><br />
    <%= f.text_field :short %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "100x20" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
